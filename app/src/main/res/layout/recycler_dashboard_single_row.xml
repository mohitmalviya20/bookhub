<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/llcontent">
<TextView
    android:id="@+id/txtRecyclerRowItem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/imageView"
    android:padding="10dp"
    android:text="list items"
    android:textSize="20sp"
    android:textStyle="bold"
    android:textColor="#000000"
    android:layout_marginTop="20dp"
    android:layout_marginRight="50dp"
    />

    <TextView
        android:id="@+id/txtRecyclerRowItem4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="4.5"
        android:layout_alignRight="@id/txtRecyclerRowItem"

        android:layout_alignParentRight="true"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/txtRecyclerRowItem1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtRecyclerRowItem"
        android:layout_toRightOf="@id/imageView"
        android:layout_alignParentRight="false"
        android:padding="10dp"
        android:text="Mohit Malviya"
        android:textSize="10sp"
        android:textColor="#000000"

        />
    <TextView
        android:id="@+id/txtRecyclerRowItem2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtRecyclerRowItem1"
        android:layout_toRightOf="@id/imageView"
        android:layout_alignParentRight="false"
        android:padding="10dp"
        android:text="Rs 299"
        android:textSize="10sp"
        android:textColor="@color/colorPrimary"

        />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"


        app:srcCompat="@drawable/bookhub_drawer_icon" />
</RelativeLayout>